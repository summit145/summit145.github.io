<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Thank You Clicker</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
:root { --red:#ff2b2b; --dark:#0a0a0a; }

body {
    margin:0;
    font-family:Arial,sans-serif;
    background:black;
    color:var(--red);
    display:flex;
    justify-content:center;
    align-items:center;
    min-height:100vh;
}

.game {
    width:min(95vw,420px);
    background:var(--dark);
    border:3px solid var(--red);
    border-radius:20px;
    padding:15px;
    box-shadow:0 0 30px red;
    text-align:center;
    position:relative;
}

.big {
    font-size:clamp(24px,6vw,34px);
    font-weight:bold;
}

.big.high {
    color:#ff4444;
    text-shadow:0 0 18px red;
}

.small { font-size:13px;color:#ffaaaa; }

.clicker {
    width:200px;
    max-width:70vw;
    aspect-ratio:1;
    border-radius:50%;
    background:radial-gradient(circle,#ff5555,#aa0000);
    border:4px solid black;
    margin:15px auto;
    font-weight:bold;
    cursor:pointer;
    box-shadow:0 0 25px red;
}

.clicker:active { transform:scale(0.95); }

button {
    width:100%;
    padding:10px;
    margin:5px 0;
    background:var(--red);
    color:black;
    border:none;
    border-radius:8px;
    font-weight:bold;
    cursor:pointer;
}

.section {
    border-top:1px solid red;
    margin-top:10px;
    padding-top:10px;
}

/* GOLDEN COOKIE */
.golden {
    position:absolute;
    width:80px;
    aspect-ratio:1;
    border-radius:50%;
    background:radial-gradient(circle,#fff6a0,#ffcc00);
    box-shadow:0 0 35px gold;
    cursor:pointer;
    animation:pulse 1s infinite;
}

@keyframes pulse {
    0%{transform:scale(1);}
    50%{transform:scale(1.2);}
    100%{transform:scale(1);}
}
</style>
</head>

<body>

<div class="game" id="game">
<h1>Thank You Clicker</h1>

<div id="count" class="big">0</div>
<div class="small">
+<span id="perClick">1</span>/click |
+<span id="perSecond">0</span>/sec |
x<span id="totalMulti">1</span>
</div>

<button class="clicker" onclick="clickThanks()">THANK YOU</button>

<div class="section">
<button onclick="buyClick()">Better Manners ‚Äî <span id="clickCost">10</span></button>
<button onclick="buyAuto()">Auto Thanker ‚Äî <span id="autoCost">50</span></button>
<button onclick="buyMultiplier()">Multiplier x2 ‚Äî <span id="multiCost">250</span></button>
<button onclick="buyFactory()">Thank Factory ‚Äî <span id="factoryCost">1K</span></button>
</div>

<div class="section">
<button onclick="prestige()">Prestige Reset (1K)</button>
Prestige: <span id="prestige">0</span>
</div>

<div class="section">
<button onclick="ascend()" id="ascendBtn" style="display:none;">Ascend (Prestige 10)</button>
Ascension Level: <span id="ascension">0</span>
</div>

<div class="section">
<h3>Achievements</h3>
<div id="achievements" class="small"></div>
</div>

<div class="section small">
Play Time: <span id="playTime">0</span> min
</div>
</div>

<script>
/* ================= DATA ================= */
let data={
thankYous:0,perClick:1,perSecond:0,multiplier:1,frenzy:1,
prestige:0,ascension:0,
clickCost:10,autoCost:50,multiCost:250,factoryCost:1000,
achievements:[],shadow:[],playTime:0,lastSave:Date.now(),goldenClicks:0
};

/* ================= UTIL ================= */
function format(n){
const u=["","K","M","B","T","Qa","Qi"];
let i=0;while(n>=1000&&i<u.length-1){n/=1000;i++;}
return n.toFixed(n<10&&i?1:0)+u[i];
}

/* ================= UI ================= */
function updateUI(){
count.textContent=format(data.thankYous);
count.classList.toggle("high",data.thankYous>=1e12);
perClick.textContent=data.perClick;
perSecond.textContent=data.perSecond;
totalMulti.textContent=(data.multiplier*data.frenzy*(1+data.prestige+data.ascension)).toFixed(1);
clickCost.textContent=format(data.clickCost);
autoCost.textContent=format(data.autoCost);
multiCost.textContent=format(data.multiCost);
factoryCost.textContent=format(data.factoryCost);
prestige.textContent=data.prestige;
ascension.textContent=data.ascension;
playTime.textContent=Math.floor(data.playTime);
ascendBtn.style.display=data.prestige>=10?"block":"none";
}

/* ================= CORE ================= */
function gain(v){data.thankYous+=v;}
function clickThanks(){
gain(data.perClick*data.multiplier*data.frenzy*(1+data.prestige+data.ascension));
}

function buy(cost,fn){if(data.thankYous>=cost){data.thankYous-=cost;fn();}}

function buyClick(){buy(data.clickCost,()=>{data.perClick++;data.clickCost*=1.5;});}
function buyAuto(){buy(data.autoCost,()=>{data.perSecond++;data.autoCost*=1.7;});}
function buyMultiplier(){buy(data.multiCost,()=>{data.multiplier*=2;data.multiCost*=3;});}
function buyFactory(){buy(data.factoryCost,()=>{data.perSecond+=10;data.factoryCost*=2;});}

function prestige(){
if(data.thankYous>=1000){
data.prestige++;
Object.assign(data,{thankYous:0,perClick:1,perSecond:0,multiplier:1,
clickCost:10,autoCost:50,multiCost:250,factoryCost:1000});
}
}

function ascend(){
if(data.prestige>=10){
data.ascension++;
data.prestige=0;
}
}

/* ================= GOLDEN COOKIE ================= */
function spawnGolden(){
if(document.querySelector(".golden"))return;
const g=document.createElement("div");
g.className="golden";
g.style.left=Math.random()*70+"%";
g.style.top=Math.random()*60+"%";
g.onclick=()=>{goldenEffect();g.remove();};
game.appendChild(g);
setTimeout(()=>g.remove(),10000);
}

function goldenEffect(){
data.goldenClicks++;
const roll=Math.random();
if(roll<0.4){ data.frenzy=7; setTimeout(()=>data.frenzy=1,10000); }
else if(roll<0.65){ gain(data.thankYous*0.15+100); }
else if(roll<0.85){ data.playTime+=30; }
else{ data.frenzy=15; setTimeout(()=>data.frenzy=1,5000); }
}

/* ================= ACHIEVEMENTS ================= */
function checkAchievements(){
if(data.playTime>=60&&!data.achievements.includes("Chris")){
data.achievements.push("Chris");
achievements.innerHTML+="üèÜ Chris<br>";
}
if(data.goldenClicks>=7&&!data.shadow.includes("Golden Touch")){
data.shadow.push("Golden Touch");
}
}

/* ================= SAVE ================= */
function save(){data.lastSave=Date.now();localStorage.setItem("thankSave",JSON.stringify(data));}
function load(){
const s=JSON.parse(localStorage.getItem("thankSave"));
if(s){data=s;}
data.achievements.forEach(a=>achievements.innerHTML+="üèÜ "+a+"<br>");
}

/* ================= LOOPS ================= */
setInterval(()=>{
gain(data.perSecond*data.multiplier*data.frenzy*(1+data.prestige+data.ascension));
data.playTime+=1/60;
checkAchievements();
updateUI();
},1000);

setInterval(save,5000);
setInterval(spawnGolden,Math.random()*120000+60000);

load();updateUI();
</script>

</body>
</html>
  
